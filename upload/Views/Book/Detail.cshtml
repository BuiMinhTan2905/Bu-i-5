@{
}
@model upload.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-4">
    <h2 class="text-center">Book Details</h2>

    <!-- Book Information Section -->
    <div class="row">
        <!-- Image Section -->
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" alt="@Model.Title" class="img-fluid" />
            }
            else
            {
                <img src="~/images/default-book-image.jpg" alt="Default Book Image" class="img-fluid" />
            }
        </div>

        <!-- Book Details Section -->
        <div class="col-md-8">
            <h3>@Model.Title</h3>
            <p><strong>Author:</strong> @Model.Author</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Price:</strong> $@Model.Price</p>
        </div>
    </div>

    <!-- Back to List Button -->
    <div class="mt-3">
        <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<!-- Additional CSS for better presentation -->
<style>
    .container {
        margin-top: 20px;
    }

    .row {
        margin-bottom: 20px;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .btn-secondary {
        margin-top: 20px;
    }
</style>



